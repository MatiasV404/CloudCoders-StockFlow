{
  "productId": string,        // PRD-XXXXXX-XXXXXX (único, para QR)
  "code": string,             // Código interno (opcional)
  "sku": string,              // SKU (opcional)
  "name": string,             // Nombre del producto (required)
  "description": string,      // Descripción (opcional)
  "category": string,         // Categoría (required)
  "status": string,           // Estado (required)
  "stock": number,            // Cantidad en inventario (required)
  "minStock": number,         // Stock mínimo para alertas
  "price": number,            // Precio de venta (required)
  "cost": number,             // Costo del producto (opcional)
  "userId": string,           // UID del admin dueño
  "addedBy": string,          // UID del usuario que creó
  "updatedBy": string,        // UID del último editor
  "createdAt": Timestamp,     // Fecha de creación
  "updatedAt": Timestamp      // Fecha de última actualización
}
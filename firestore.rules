rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función helper para obtener el projectCode del usuario actual
    function getUserProjectCode() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.projectCode;
    }
    
    // Función helper para obtener el projectCode del dueño de los productos
    function getOwnerProjectCode(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.projectCode;
    }
    
    // Colección de usuarios
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // PRODUCTOS
    match /users/{userId}/products/{productId} {
      // Lectura: Admin dueño O usuario con mismo projectCode
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        getUserProjectCode() == getOwnerProjectCode(userId)
      );
      
      // Escritura: Admin dueño O usuario con permisos
      allow write: if request.auth != null && (
        request.auth.uid == userId ||
        (getUserProjectCode() == getOwnerProjectCode(userId) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.manageProducts == true)
      );
    }
    
    // - Subcollection
    match /users/{userId}/movements/{movementId} {
      // Lectura: Admin dueño O usuario con mismo projectCode
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        getUserProjectCode() == getOwnerProjectCode(userId)
      );
      
      // Escritura: Solo crear (CREATE)
      // Admin dueño O usuario con mismo projectCode
      allow create: if request.auth != null && (
        request.auth.uid == userId ||
        getUserProjectCode() == getOwnerProjectCode(userId)
      );
      
      // AUDITORÍA INMUTABLE: NUNCA permitir editar o eliminar
      allow update, delete: if false;
    }
  }
}
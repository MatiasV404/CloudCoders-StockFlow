rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Colecci칩n de usuarios - Acceso permisivo para desarrollo
    match /users/{userId} {
      // Cualquier usuario autenticado puede leer perfiles
      // (necesario para que operarios verifiquen c칩digos de proyecto)
      allow read: if request.auth != null;
      
      // Solo el due침o puede modificar su perfil
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Colecci칩n de productos - Acceso permisivo para desarrollo
    match /users/{userId}/products/{productId} {
      // Permitir lectura y escritura a cualquier usuario autenticado
      allow read, write: if request.auth != null;
    }
  }
}